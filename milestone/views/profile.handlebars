<div id="title">
  <img src="images/profile.png">
</div>
{{#each userInfo}}
<div class="SM-profileImage"><img src="{{user.profile_picture}}" alt=""> </div>

<div class="SM-userName">
  <h1>{{this.user.username}}</h1>
</div>
{{/each}}
<div class = "bb-div">
      <div>
        <img src="{{userInfo.profile_picture}}" alt="" height = "250px" width = "250px"/>
      </div>

        <p class="" margin-bottom="10%">
          <h3>Username: {{userInfo.username}}</h3>
        </p>

        <p>

        </p>

        <p class="">
          <h3>Bio: {{userInfo.bio}}</h3>
        </p>

        <p>
          <h3>Website: {{userInfo.website}}</h3>
        </p>

        <form class="" action="/profile" method="post">
          <input type="hidden" name="_id" value="{{userInfo._id}}">
          <p>
            <input type="text" name="username" value="" placeholder = "Update Username">
          </p>

          <p class="">
            <input type="text" name="biography" value="" placeholder = "Update User Bio">
          </p>

          <p>
            <input type="text" name="fullName" value="" placeholder = "Update Full Name">
          </p>

          <p>
            <input type="text" name="website" value="" placeholder = "Update Website">
          </p>

          <p class="">
            <button type="submit">Update</button>
          </p>
        </form>
</div>
